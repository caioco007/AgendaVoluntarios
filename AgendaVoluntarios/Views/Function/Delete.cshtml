@model AgendaVoluntarios.DTO.ViewModels.FunctionViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Função</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ministério
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FunctionTypeName)
        </dd>
        <dt class="col-sm-2">
            Atividade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityTypeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-3">
                <input type="submit" value="Excluir" class="btn btn-danger float-start" />
            </div>
            <div class="col-md-3">
                <a asp-action="Index" class="btn btn-secondary float-end">Voltar à Lista</a>
            </div>
        </div>
    </form>
</div>
