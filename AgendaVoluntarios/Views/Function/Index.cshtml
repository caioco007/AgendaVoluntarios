@model IEnumerable<AgendaVoluntarios.DTO.ViewModels.FunctionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista</h1>

<h4>Função</h4>
<hr />

<p>
    <a asp-action="Create">Criar função</a>
</p>
     
<table class="table">
    <thead>
        <tr>
            <th>
                Ministérios
            </th>
            <th>
                Atividades
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FunctionTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityTypeName)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
